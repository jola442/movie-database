doctype html
head
  title Movie Database
  link(rel='stylesheet' href='/css/movies.css')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css')
header
  include ../partials/navbar.pug
  
main
  //- #{movies}
  article#myArticle
    if movies.length == 0
      |This movie is not in the database
    else
      each movie in movies
          span.movie
            if movie.poster
              img(src=movie.poster width=50 height = 50)
            else
              img(src="/images/blankmovie.jpg" width=50 height=50)
            a(href="/movies/"+movie.title)=movie.title
          br


    
    if qObj.page > 1
      -let url = "/movies?title=" + qObj.title + "&genre=" + qObj.genre + "&year=" + qObj.year + "&page="+(qObj.page-1)

      span.previous
        a(href=url) Previous 
      
    
    if (qObj.hasNext)
      -let url = "/movies?title=" + qObj.title + "&genre=" + qObj.genre + "&year=" + qObj.year + "&page="+(qObj.page+1)
      span.next
        a(href=url) Next 
        
    

    